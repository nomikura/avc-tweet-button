{
    "name": "AtCoder Virtual Contest Tweet Button",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "AtCoder Virtual Contest Tweet Button",
    "browser_action": {
        "default_title": "AtCoder Virtual Contest Tweet Button"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://not-522.appspot.com/contest/*"],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}